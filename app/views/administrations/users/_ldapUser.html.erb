<%= form_for @user, as: :user, url: {
                          controller: 'administrations/users',
                          action: :update},
             method: :patch do |f| %>
    <div class="admin">
      <div class="form-group">
        <dl class="dl-horizontal">
          <dt><%= f.label :login %></dt>
          <dd><%= @user.login %></dd>

          <dt><%= f.label :type %></dt>
          <dd><%= t("activerecord.values.user.type.#{@user.type.downcase}") %></dd>

          <dt><%= f.label :role %></dt>
          <dd><%= f.select(:role, options_for_select(User::ROLES.map { |id, role|
                                                       [t("activerecord.values.user.role.#{role}"), role]
                                                     }, @user.role), class: 'form-control') %></dd>
          <dt><%= f.label :first_name %></dt>
          <dd><%= @user.first_name %></dd>

          <dt><%= f.label :last_name %></dt>
          <dd><%= @user.last_name %></dd>

          <dt><%= f.label :email %></dt>
          <dd><%= @user.email %></dd>

          <dt><%= f.label :ais_email %></dt>
          <dd><%= @user.ais_email %></dd>

          <dt></dt>
          <dd>
            <%= submit_tag t('global.links.save_changes'), class: :btn, data: { disable_with: t('global.texts.saving') } %>
            <%= button_tag t('global.links.discard_changes'), class: :btn, type: :reset %>
          </dd>

        </dl>
      </div>
    </div>
<% end %>
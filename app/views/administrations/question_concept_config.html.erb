<nav class="question-nav not-zoomable">
  <%= render 'shared/user_element_admin' %>
  <div class="mobile-content wide">
    <h2><%= Setup.first.name %> - <%= t '.navbar_heading' %></h2>
    <a href="<%=url_for administration_path %>"><i class="nav-right-icons icon-level-up"></i></a>
    <a class="user-element-cta"><i class="nav-right-icons icon-menu"></i></a>
  </div>
</nav>
<hr class="nav-offset not-zoomable">

<div class="admin wide">
  <table id="question-concept-table">
    <% @questions.each do |q| %>
        <tr>
            <td style="width: 40%;">
              <div class="question-concept-table-cell">
                <i class="icon-<%=
                case q.type
                when "SingleChoiceQuestion"
                'radio-checked'
                when "MultiChoiceQuestion"
                'checkbox-checked'
                when "EvaluatorQuestion"
                'sliders'
                end %>"></i>
                  <strong><%= q.lo_id %></strong>
                  <%= q.question_text %>
                  <span class="question-concept-table-answers">
                  <% q.answers.each do |a|
                    if a.is_correct %>
                        <strong>"<%= a.answer_text %>",</strong>
                    <% else %>
                        "<%= a.answer_text %>",
                    <% end %>
                  <% end %>
                </span>
              </div>
            </td>
            <td class="concept-list" data-question-id="<%= q.id %>">
              <% q.concepts.each do |c| %>
                  <%= render partial: 'concept', locals: {concept: c, question: q} %>
              <% end %>
            </td>
            <td nowrap>
              <%= text_field_tag "a", nil, placeholder: 'PridaÅ¥ koncept', class: 'concept-autocomplete', data: { question_id: q.id } %>
              <%= button_tag '<i class="icon-add"></i>'.html_safe, type: 'button', class: 'concept-add', data: { question_id: q.id } %>
            </td>
        </tr>
    <% end %>
  </table>
</div>


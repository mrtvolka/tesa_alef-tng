<div class="row">
  <div class="col-lg-12" id="answer-settings-col">
    <%= form_tag administrations_learning_object_answers_path(learning_object_id: @learning_object.id), method: :patch do %>
        <div class="admin">
          <p><strong><%= t('activerecord.attributes.learning_object.question_text')%></strong>
          <%= @learning_object.question_text %></p>
          <%if @learning_object.type == "OpenQuestion"%>
          Pre otvorené otázky nie je možné pridávať odpovede!
          <% else %>
          <table class="answers-table">
            <thead>
            <tr>
              <th class="answers-table-id"><%= t '.label.id'%></th>
              <th><%= t '.label.answer_text'%></th>
              <th class="answers-table-tools"><%= t '.label.options'%></th>
            </tr>
            </thead>
            <tbody>
                <%@learning_object.answers.order('answers.id').each do |answer|%>
                    <tr class="">
                      <td class="answers-table-id"><%= answer.id %></td>
                      <td>
                        <% if answer.learning_object.type == "EvaluatorQuestion" %>
                            <%= text_area_tag "edit_answer_text_#{answer.id}", answer.answer_text, class: "question-answer-area" %>
                        <% else %>
                            <%= text_field_tag "edit_answer_text_#{answer.id}", answer.answer_text, class: "question-answer" %>
                        <% end %>
                      </td>
                      <td class="answers-table-tools">
                        <% unless answer.learning_object.type == "EvaluatorQuestion" %>
                            <%= check_box_tag("correct_answer_#{answer.id}", 1, answer.is_correct, class: 'icon', data: { type: 'correctness' }) %>
                            <%= label_tag("correct_answer_#{answer.id}", "<i class=\"icon-checkbox\"></i>".html_safe, title: t('.tooltip.correctness'), data: { toggle: 'tooltip' }) %>
                        <% end %>
                        <%= check_box_tag("visible_answer_#{answer.id}", 1, true, class: 'icon', data: { type: 'visibility' }) %>
                        <%= label_tag("visible_answer_#{answer.id}", "<i class=\"icon-checkbox icon-eyebox\"></i>".html_safe, title: t('.tooltip.visibility'), data: { toggle: 'tooltip' }) %>
                        <%= link_to "<i class=\"icon-delete\"></i>".html_safe, administrations_learning_object_answer_path(id: @learning_object.id, answer_id: answer.id),
                                    method: :delete,
                                    class: 'danger',
                                    data: { toggle: 'tooltip', confirm: "Confirm?" },
                                    title: t('.tooltip.delete') %>
                      </td>
                    </tr>
                <% end %>
            </tbody>
          </table>

          <%= submit_tag t('global.links.save_changes'), class: :btn, data: { disable_with: t('global.texts.saving') } %>
          <%= button_tag t('global.links.discard_changes'), class: :btn, type: :reset %>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
<% if @learning_object.type != "OpenQuestion"%>
<%= form_for Answer.new, url: { controller: 'administrations/answers', action: 'create' }, method: :post do |f| %>

    <div class="admin">
      <h3><%= t('.label.add_new') %></h3> <br/>
      <%= f.label :answer_text %>
      <%= f.text_field :answer_text, placeholder: t('.label.answer_text'), class: 'simple-text' %>
      <span class="options-label"><%= t('.label.options') %></span>
      <% unless @learning_object.type == "EvaluatorQuestion" %>
          <%= f.check_box(:is_correct, { checked: @learning_object.allow_new_correctness? , class: 'icon' }, 1) %>
          <%= f.label(:is_correct, "<i class=\"icon-checkbox\"></i>".html_safe, class: :inline, title: t('.tooltip.correctness'), data: { toggle: 'tooltip' }) %>
          &nbsp;&nbsp;
      <% end %>
      <%= f.check_box(:visible_answer, { checked: @learning_object.allow_new_visibility?, class: 'icon' }, 1) %>
      <%= f.label(:visible_answer, "<i class=\"icon-checkbox icon-eyebox\"></i>".html_safe, class: :inline, title: t('.tooltip.visibility'), data: { toggle: 'tooltip' }) %>
      <div class="form-buttons">
        <%= f.submit value: "Pridať odpoveď", data: { disable_with: t('global.texts.saving') } %>
      </div>
    </div>

<% end %>
<% end %>
<nav>
  <div class="admin-nav">
    <h2>- Stránka učiteľa</h2>
    <%= link_to "Domov", root_path, class: 'admin-nav-button' %>
  </div>
</nav>
<hr class="nav-offset">

<div class="admin">
  <div>
      <ul class="nav nav-pills">
        <% @chart.each.with_index do |chart, index| %>
          <li class="<%= 'active' unless index > 0 %>" id="week-toggle-testing">
            <a data-toggle="tab" href="#<%=index.to_s%>">
            <%= "Otázka " + (index+1).to_s %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  <hr>
  <div class="tab-content">
    <% @chart.each.with_index do |chart,index| %>
        <div id="<%=index.to_s%>" class=" tab-pane fade  <%= 'in active' unless index > 0 %>">
          <div class="graph-title"> <%= mathjax_tag %><%= @titles[index] %></div>
          <% if chart.instance_of?(LazyHighCharts::HighChart)%>
              <div class="chart"><%= high_chart(chart.__id__.to_s, chart) %></div>
          <% else %>
              <div class="highcharts-container" id="highcharts-8">
                <table class="tg" style="margin: 0 auto;text-align: center";>
                  <tr>
                    <th class="tg-yw4l">Počet</th>
                    <th class="tg-yw4l">Text odpovede</th>
                  </tr>
                  <% chart[1].each do |key,value| %>
                      <tr>
                        <td class="tg-yw4l"><%= value %></td>
                        <td class="tg-yw4l"><%= key %></td>
                      </tr>
                  <% end %>
                </table>
              </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
<script type="text/javascript">
    if (window.MathJax){ MathJax.Hub.Queue(["Typeset",MathJax.Hub]);}
</script>
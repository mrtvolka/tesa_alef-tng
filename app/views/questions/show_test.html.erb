<nav class="without-icons not-zoomable">
  <%= render 'shared/user_element' %>
  <div class="mobile-content">
    <h2><%= @setup.name %> - test</h2>
    <a class="user-element-cta"><i class="nav-right-icons icon-menu"></i></a>
  </div>
</nav>
<hr class="nav-offset not-zoomable">
<form method="post" action="<%= submit_test_path %>" id="test-form" class="question-form" data-remote>
  <% @sorted_los.each do |lo| %>
      <input type="hidden" name="questions[<%=lo.id%>][type]" value="<%= lo.type %>">
      <input type="hidden" name="questions[<%=lo.id%>][commit]" value="<%= "send_answer" %>">
      <div class="my-mobile-content main">
        <div class="card-text">
          <br>
          <p><%= mathjax_tag :config=> 'TeX-AMS-MML_SVG' %><%= replace_whitespace(lo.question_text) %></p></div>
        <% unless lo.image.nil? %>
            <%= image_tag qimages_url(@week.id,lo.id), class: 'question-image', alt: 'ObrÃ¡zok' %>
        <% end %>
        <div id="question-options">
          <% case lo.type
               when 'SingleChoiceQuestion' %>
              <% @question= lo%>
              <%= render 'test_single_q' %>
          <% when 'MultiChoiceQuestion' %>
              <% @question= lo%>
              <%= render 'test_multi_q' %>
          <% when 'OpenQuestion' %>
              <% @question= lo%>
              <%= render 'test_open_q'%>
          <% when 'EvaluatorQuestion' %>
              <% @question= lo%>
              <%= render 'test_eval_q' %>
              <!--- submitting answer does not work---->
          <% end %>
        </div>
      </div>
  <% end %>

  <button class="question-button question-button-red" name="commit" value="submit_test">Odovzdaj test</button>
</form>
</div>
